#!/usr/bin/env ruby

def add(task)
  puts "added #{task}"
end

case ARGV[0]
  when "add"
    if ARGV[1]
      add ARGV[1]
    else
      puts "Not enough arguments."
      puts "usage: git-issues add PATH"
    end 
  when "rm"
    if ARGV[1]
      rm ARGV[1]
    else
      puts "Not enough arguments."
      puts "usage: git-issues rm PATH"
    end 
  when "edit"
    puts "editing"
  when "list"
    puts "listing"
  when "top"
    puts "top"
  when "commit"
    if ARGV[1]
      puts "committing #{ARGV[1]}"
    else
      puts "commit top task"
    end
  when nil
    puts "Type 'git-issues help' for usage." 
  else
    puts "Unknown command: #{ARGV[0]}"
    puts "Type 'git-issues help' for usage." 
end

